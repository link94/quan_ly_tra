<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="6dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgview"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_launcher"
                android:background="@drawable/rounder_conner"/>

            <TextView
                android:id="@+id/ten_do_uong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên đồ uống"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_toRightOf="@id/imgview"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại đồ uống"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/ten_do_uong"
                android:layout_marginBottom="10dp"
                android:id="@+id/loai_do_uong"
                android:maxLines="2"
                android:layout_toRightOf="@id/imgview"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loai_do_uong"
                android:layout_marginLeft="15dp"
                android:text="Giá : "
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:layout_toRightOf="@id/imgview"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

